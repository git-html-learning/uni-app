page {
  background-color: #efeff4;
}
.content {
  padding-top: 20rpx;
  font-size: 28rpx;
}
.content .address {
  background-color: #fff;
  padding-left: 30rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.content .address .item {
  box-sizing: border-box;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: solid 1rpx #f5f5f5;
}
.content .address .item .item_title {
  flex: 1;
}
.content .address .item text {
  color: #b1b1b1;
  font-size: 27rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}
.content .address .item .item_data_nodata {
  color: #999999;
}
.content .detail {
  box-sizing: border-box;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  border-bottom: solid 1rpx #f5f5f5;
  padding: 20rpx 50rpx 0 30rpx ;
  box-shadow: 5rpx 5rpx 5rpx #e6e6e6;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.content .detail .detail_title {
  flex: 1;
}
.content .detail textarea {
  font-size: 28rpx;
  height: 100rpx;
  width: 500rpx;
  border-radius: 20rpx;
  text-align: right;
}
.content button {
  margin-top: 30rpx;
  width: 400rpx;
}

