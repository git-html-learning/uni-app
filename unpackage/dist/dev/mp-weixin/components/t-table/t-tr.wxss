
.t-tr {
	width: 100%;
	display: flex;
}
.t-tr t-th,
.t-tr t-td {
	display: flex;
	flex: 1;
}
.t-tr .t-check-box {
	flex-shrink: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 80rpx;
	color: #3b4246;
	border-left: 1px #d0dee5 solid;
	border-top: 1px #d0dee5 solid;
}
.t-tr .t-check-box checkbox {
	-webkit-transform: scale(0.8);
	        transform: scale(0.8);
}

